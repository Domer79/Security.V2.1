<Page x:Class="WpfApp_TestSecurity.Pages.Right.RoleEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_TestSecurity.Pages.Right"
      xmlns:ctrls="clr-namespace:WpfApp_TestSecurity.Pages.Right.Controls.RoleControls"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="RoleEditPage">

    <Grid>
        <TabControl>
            <TabItem Header="Профиль">
                <Grid Background="#FFE5E5E5">
                    <ctrls:ProfileControl x:Name="ProfileControl" />
                </Grid>
            </TabItem>
            <TabItem Header="Политики">
                <Grid Background="#FFE5E5E5">
                    <ctrls:PolicyControl x:Name="PolicyControl" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
