@model MvcWithDbApplication.Models.LogOnViewModel

@{
    ViewBag.Title = "LogOn";
    ViewBag.ReturnUrl = Request["ReturnUrl"];
}

@using (Html.BeginForm(null, null, new {returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    <div class="form-group">
        <label for="exampleInputEmail1">Login or email</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="loginOrEmail" aria-describedby="emailHelp" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <div class="form-group form-check">
        @Html.CheckBoxFor(m => m.RememberMe)
        <label class="form-check-label" for="RememberMe">Remember me</label>
    </div>
     if (Model?.ErrorMessage != null)
     {
        <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
     }
    <input type="submit" class="btn btn-primary" value="LogOn" />
}
